<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/asl_background"
    tools:context="com.drawbytess.aslbasics.OptionsActivity">

    <Button
        android:id="@+id/btn_letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#10C048"
        android:text="ALPHABET"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_letter"
        />

    <Button
        android:id="@+id/btn_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#10C048"
        android:text="NUMBERS"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_number"
        />

    <Button
        android:id="@+id/btn_feeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#10C048"
        android:text="FEELINGS"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_feelings"
        />

    <Button
        android:id="@+id/btn_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#10C048"
        android:text="PEOPLE"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_people"
        />


</LinearLayout>